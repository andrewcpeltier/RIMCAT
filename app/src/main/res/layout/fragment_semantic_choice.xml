<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="1000dp"
        android:layout_height="505dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/semantic_layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <TextView
                android:id="@+id/semantic_ready_text"
                android:layout_width="632dp"
                android:layout_height="89dp"
                android:layout_marginTop="112dp"
                android:gravity="center"
                android:text="@string/semantic_choice_ready"
                android:textAlignment="center"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/semantic_ready_btn"
                android:layout_width="217dp"
                android:layout_height="65dp"
                android:layout_marginStart="456dp"
                android:layout_marginLeft="456dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="456dp"
                android:layout_marginRight="456dp"
                android:background="@color/colorAccent"
                android:text="@string/verbal_readyBtn"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="35sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/semantic_ready_text" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/semantic_layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/semantic_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text=""
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TableLayout
                android:id="@+id/semantic_grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="*"
                android:layout_marginStart="128dp"
                android:layout_marginLeft="128dp"
                android:layout_marginTop="128dp"
                android:layout_marginEnd="128dp"
                android:layout_marginRight="128dp"
                android:layout_marginBottom="96dp"
                android:useDefaultMargins="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/scb1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/backgroundColor"
                        android:textSize="20sp"/>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/scb2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/backgroundColor"
                        android:textSize="20sp"/>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/scb3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/backgroundColor"
                        android:textSize="20sp"/>
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" >

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/scb4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/backgroundColor"
                        android:textSize="20sp"/>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/scb5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/backgroundColor"
                        android:textSize="20sp"/>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/scb6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/backgroundColor"
                        android:textSize="20sp"/>
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" >

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/scb7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/backgroundColor"
                        android:textSize="20sp"/>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/scb8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/backgroundColor"
                        android:textSize="20sp"/>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/scb9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/backgroundColor"
                        android:textSize="20sp"/>
                </TableRow>
            </TableLayout>
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>